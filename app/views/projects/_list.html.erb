<div class="ibox-tools">
    <%= link_to "Add new Project", new_project_path, remote:true, class: 'btn btn-primary'%>
</div>
<br>
<table class="table table-striped table-hover">
    <tbody>
		<%projects.each do |project|%>
	        <tr class='project-<%=project.id%>'>
	            <td class="project-title">
	            	<%= link_to project.title, project_path(id: project.id), remote: true%>
	                <br>
	                <small><%= project.description%></small>
	            </td>
	            <td class="project-completion">
	                
	            </td>
	            <td>
	            
	            </td>
	            <td class="project-actions">
	            	<%= link_to "Edit", edit_project_path(id: project.id), remote: true,  class: 'btn btn-warning'%>
	            	<%= link_to "Delete", project_path(id: project.id), method: :delete, remote: true,  class: 'btn btn-danger', data: {confirm: "Are you sure to delete this project which inturn deletes all its tasks."}%>
	            </td>
	        </tr>
		<%end%>
    </tbody>
</table>
